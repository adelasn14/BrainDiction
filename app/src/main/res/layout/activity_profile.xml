<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.profile.ProfileActivity">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:itemIconTint="@color/bottom_nav_color_icon_selector"
        app:itemTextColor="@color/bottom_nav_color_icon_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:menu="@menu/bottom_nav_menu" />

    <!--    usernamee-->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="142dp"
        android:layout_height="138dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="143dp"
        android:layout_marginBottom="64dp"
        android:src="@drawable/doctor_photo"
        app:layout_constraintBottom_toTopOf="@+id/tv_username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="129dp"
        android:layout_height="25dp"
        android:layout_marginTop="220dp"
        android:text="@string/username"
        android:textColor="?android:attr/textColorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.085"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ev_username"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="220dp"
        android:text="@string/username"
        android:textColor="?android:attr/textColorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.829"
        app:layout_constraintStart_toEndOf="@+id/tv_username"
        app:layout_constraintTop_toTopOf="parent" />

<!--alamat-->

    <TextView
        android:id="@+id/tv_alamat"
        android:layout_width="129dp"
        android:layout_height="25dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="@string/alamat"
        android:textColor="?android:attr/textColorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_pekerjaan" />

    <TextView
        android:id="@+id/ev_address"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="164dp"
        android:layout_marginTop="12dp"
        android:text="@string/alamat"
        android:textColor="?android:attr/textColorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.214"
        app:layout_constraintStart_toEndOf="@+id/tv_alamat"
        app:layout_constraintTop_toBottomOf="@+id/ev_pekerjaan" />

<!--pekerjaan-->
    <TextView
        android:id="@+id/tv_pekerjaan"
        android:layout_width="129dp"
        android:layout_height="25dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="@string/pekerjaan"
        android:textColor="?android:attr/textColorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

    <TextView
        android:id="@+id/ev_pekerjaan"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="12dp"
        android:text="@string/pekerjaan"
        android:textColor="?android:attr/textColorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.823"
        app:layout_constraintStart_toEndOf="@+id/tv_pekerjaan"
        app:layout_constraintTop_toBottomOf="@+id/ev_name" />

<!--name-->
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="129dp"
        android:layout_height="25dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="@string/name"
        android:textColor="?android:attr/textColorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_username" />

    <TextView
        android:id="@+id/ev_name"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="188dp"
        android:layout_marginTop="12dp"
        android:text="@string/name"
        android:textColor="?android:attr/textColorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tv_name"
        app:layout_constraintTop_toBottomOf="@+id/ev_username" />

<!--email-->
    <TextView
        android:id="@+id/tv_email"
        android:layout_width="129dp"
        android:layout_height="25dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="@string/email"
        android:textColor="?android:attr/textColorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_alamat" />

    <TextView
        android:id="@+id/ev_email"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="165dp"
        android:layout_marginTop="12dp"
        android:text="@string/email"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="?android:attr/textColorPrimary"
        app:layout_constraintHorizontal_bias="0.431"
        app:layout_constraintStart_toEndOf="@+id/tv_email"
        app:layout_constraintTop_toBottomOf="@+id/ev_address" />

<!--    password-->

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="129dp"
        android:layout_height="25dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="@string/password"
        android:textColor="?android:attr/textColorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_email" />

    <TextView
        android:id="@+id/ev_password"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="167dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="33dp"
        android:text="@string/password"
        android:textColor="?android:attr/textColorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_password"
        app:layout_constraintTop_toBottomOf="@+id/ev_email" />

</androidx.constraintlayout.widget.ConstraintLayout>